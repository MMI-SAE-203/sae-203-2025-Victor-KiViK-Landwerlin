---
import Layout from "../../layouts/Layout.astro"
import "../../styles/global.css"
---
<Layout>
    <div class="container mx-auto p-6 flex justify-center">
        <div class="bg-black p-6 rounded-lg shadow-lg max-w-md w-full">
            <h2 class="text-2xl font-semibold text-white mb-4">Contactez-nous</h2>
            <form class="space-y-4">
                <div class="flex flex-col">
                    <label for="name" class="text-white font-lexend">Nom</label>
                    <input type="text" id="name" class="p-2 border border-white rounded bg-gray-700 text-white focus:border-blue-500" required>
                </div>
                <div class="flex flex-col">
                    <label for="email" class="text-white font-lexend">Email</label>
                    <input type="email" id="email" class="p-2 border border-white rounded bg-gray-700 text-white focus:border-blue-500" required>
                </div>
                <div class="flex flex-col">
                    <label for="message" class="text-white font-lexend">Message</label>
                    <textarea id="message" rows="5" class="p-2 border border-white rounded bg-gray-700 text-white focus:border-blue-500" required></textarea>
                </div>
                <button class="w-full bg-blue-500 hover:bg-blue-600 text-white font-bold py-2 px-4 rounded transition-all">Envoyer</button>
            </form>
        </div>
    </div>
</Layout>